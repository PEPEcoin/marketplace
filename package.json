{
  "name": "marketplace",
  "version": "0.1.0",
  "description": "Decentraland's LAND Marketplace",
  "main": "src/server.js",
  "scripts": {
    "lint": "tslint -p src/tsconfig.json --fix",
    "lint:fix": "tslint -p src/tsconfig.json",
    "pretest": "npm run build:tsc",
    "test": "npx mocha -r specs/specs_setup.js specs/setup.js src/**/*.spec.js",
    "watch:test": "npm run watch:build:tsc && npx mocha -r specs/specs_setup.js specs/setup.js src/**/*.spec.js --watch",
    "init-db": "./scripts/initDb.js",
    "renew-blockchain-data": "./scripts/renewBlockchainData.js",
    "sanity-check": "./scripts/sanityCheck.js run",
    "seed": "./scripts/seed.js",
    "tag": "./scripts/tag.js",
    "monitor-blockchain": "./scripts/monitor/program.js index",
    "cli": "./scripts/mktcli.js",
    "migrate": "npm run build:tsc && ./migrations/migrate",
    "build": "npm run lint && npm run test && npm run build:tsc",
    "build:ci": "npm run migrate up && npm run build",
    "build:tsc": "tsc -p src/tsconfig.json",
    "watch:build:tsc": "tsc -p src/tsconfig.json --watch",
    "start": "npm run build:tsc && cd src && node server.js",
    "dev": "nodemon --exec npm run start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/marketplace.git"
  },
  "keywords": [
    "decentraland",
    "marketplace",
    "dapp"
  ],
  "author": "Decentraland",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.11.1",
    "@types/flat": "0.0.28",
    "@types/uuid": "^3.4.3",
    "bignumber.js": "^5.0.0",
    "body-parser": "^1.18.2",
    "decentraland-commons": "^4.0.1",
    "decentraland-eth": "^2.1.0",
    "ethereumjs-abi": "^0.6.5",
    "express": "^4.16.2",
    "flat": "^4.0.0",
    "newrelic": "^3.3.0",
    "node-pg-migrate": "^2.23.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/sinon": "^4.3.3",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dcl-tslint-config-standard": "^1.0.1",
    "faker": "^4.1.0",
    "inquirer": "^5.2.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "sinon": "^5.0.3",
    "tslint": "^5.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  }
}
